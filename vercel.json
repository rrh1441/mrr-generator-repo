{
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "builds": [
    {
      "src": "api/**",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "staticBuild": {
    "distDir": "dist"
  }
}
